<Window x:Class="tourPlanner.UIL.Views.AboutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tourPlanner.UIL.Views"
        mc:Ignorable="d"
        Title="AboutDialog" Height="450" Width="800" Loaded="Window_Loaded">
    <DockPanel Margin="5">
        <Button DockPanel.Dock="Bottom" Content="OK" Command="{Binding CloseCommand}" Margin="5"/>
        <StackPanel>
            <TextBlock Text="{Binding Disclaimer}"/>
            <TextBlock Text="{Binding Author}"/>
        </StackPanel>
    </DockPanel>
</Window>
